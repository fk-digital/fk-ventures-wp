<li class="PortfolioItem PortfolioItem--item" id="{{ name|slugify }}-portfolio">
  <style>
    #{{ name|slugify }}-portfolio { --itemTextColour: {{ textColor
      ? textColor
      : 'var(--palette-dark)' }}; }
  </style>

  <a
    href="{{ url }}"
    target="_blank"
    style="background-color: {{ backgroundColour }};"
  >
    <h3
      class="PortfolioItem__Logo"
      {{ imageStyle ? 'style="' ~ imageStyle ~ '"' }}
    >
      <span class="sr-only">{{ name }}</span>
      <img
        src="{{ theme.link }}/assets/images/logos/{{ logo }}"
        alt="{{ name }}"
        loading="lazy"
        width="100"
        height="100"
      />
    </h3>
    {% if sector %}
      <p class="PortfolioItem__Sector SmallCaps">
        <span class="PortfolioItem__Heading">Sector:</span> {{ sector }}
      </p>
    {% endif %}
    {% if success %}
      <p class="PortfolioItem__Success">
        <span class="PortfolioItem__Heading SmallCaps">Success:</span>
        <span class="PortfolioItem__SuccessDetail">{{ success }}</span>
      </p>
    {% endif %}
  </a>
</li>
