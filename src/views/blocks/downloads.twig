{% extends 'block-layout.twig' %}
{% block block_content %}
  <div class="Container">
    <div class="Downloads__Header">
      {% if fields.eyebrow %}
        <span class="Downloads__Eyebrow SmallCaps AppearFadeMoveIn Delay">
          {{ fields.eyebrow }}
        </span>
      {% endif %}
      {% if fields.heading %}
        <h2 class="Downloads__Title Block__Title AppearFadeMoveIn Delay">
          {{ fields.heading }}
        </h2>
      {% endif %}
      {% if fields.copy %}
        <div class="Downloads__Copy AppearFadeMoveIn Delay ugc">
          {{ fields.copy }}
        </div>
      {% endif %}
    </div>

    {% if fields.files %}
      <ul class="Downloads__List">
        {% for download in fields.files %}
          {% set type = download.file.url|filetype %}
          {% set size = download.file.filesize|filesize %}

          <li class="Downloads__Item AppearFadeMoveIn Delay">
            <a
              href="{{ download.file.url }}"
              class="Download"
              aria-label="Download {{ download.name }} | "
              download
            >
              {{ source(directory ~ 'images/arrow-right.svg') }}

              <div class="Download__Content">
                <h3 class="Download__Title SmallCaps">{{ download.name }}</h3>
                <div class="Download__Meta SmallCaps">
                  <span class="Download__Type">{{ type }}</span>
                  &nbsp;|&nbsp;
                  <span class="Download__Size">{{ size }}</span>
                </div>
              </div>
            </a>
          </li>
        {% endfor %}
      </ul>
    {% endif %}
  </div>
{% endblock %}
