{% extends 'block-layout.twig' %}
{% block block_content %}
  <div class="Container">
    <div class="Tabs__Header">
      {% if fields.eyebrow %}
        <span class="Tabs__Eyebrow SmallCaps AppearFadeMoveIn Delay">
          {{ fields.eyebrow }}
        </span>
      {% endif %}
      {% if fields.heading %}
        <h2 class="Tabs__Title AppearFadeMoveIn Delay">{{ fields.heading }}</h2>
      {% endif %}
      {% if fields.copy %}
        <div class="Tabs__Copy AppearFadeMoveIn Delay ugc">
          {{ fields.copy }}
        </div>
      {% endif %}
    </div>

    <section class="TabGroup">
      <div class="TabGroup__Buttons" role="tablist">
        {% for tab in fields.tabs %}
          <button
            class="TabGroup__Button {% if loop.index == 1 %}active{% endif %}"
            role="tab"
            aria-controls="{{ tab.title|slugify }}"
            aria-selected="{{ loop.index == 1 ? 'true' : 'false' }}"
          >
            {{ tab.title }}
          </button>
        {% endfor %}
      </div>
      {% for tab in fields.tabs %}
        <div
          id="{{ tab.title|slugify }}"
          role="tabpanel"
          tab-title="Tab {{ loop.index }}"
          class="Tab {{ loop.index == 1 ? 'active' }}"
          aria-selected="{{ loop.index == 1 ? 'true' : 'false' }}"
        >
          <div class="ugc">
            {% if tab.title %}
              <h3 class="Tab__Title">{{ tab.title }}</h3>
            {% endif %}
            {% if tab.copy %}{{ tab.copy }}{% endif %}
          </div>
        </div>
      {% endfor %}
    </section>
  </div>
{% endblock %}
