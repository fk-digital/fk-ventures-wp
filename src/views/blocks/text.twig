{% extends 'block-layout.twig' %}
{% block block_content %}
  <div class="Container">
    <div class="Grid">
      <div class="Text__Content">
        {% if fields.eyebrow %}
          <span class="Text__Eyebrow SmallCaps AppearFadeMoveIn Delay">
            {{ fields.eyebrow }}
          </span>
        {% endif %}
        {% if fields.heading %}
          <h2 class="Text__Title AppearFadeMoveIn Delay">
            {{ fields.heading }}
          </h2>
        {% endif %}
        {% if fields.copy %}
          <div class="Text__Copy AppearFadeMoveIn Delay ugc">
            {{ fields.copy }}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
{% endblock %}
