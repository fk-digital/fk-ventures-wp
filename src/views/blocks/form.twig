{% extends 'block-layout.twig' %}
{% block block_content %}
  <div class="Container">
    {% if fields.heading %}
      <h2 class="Form__Title AppearFadeMoveIn Delay">{{ fields.heading }}</h2>
    {% endif %}

    {% if fields.form %}
      {{
        function(
          'do_shortcode',
          '[gravityform id="' ~ fields.form
            ~ '" title="false" description="false" ajax="true"]'
        )
      }}
    {% endif %}
  </div>
{% endblock %}
